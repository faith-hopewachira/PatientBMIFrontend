<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.PatientBMIApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        tools:targetApi="31"
        tools:replace="android:theme"
        android:hardwareAccelerated="true">

        <!-- LAUNCHER activity -->
        <activity
            android:name=".ui.patient_registration.PatientRegistrationActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name=".ui.vitals.VitalsActivity"
            android:exported="false"
            android:launchMode="singleTask"/>

        <activity
            android:name=".ui.patient_listing.PatientListingActivity"
            android:exported="false"
            android:launchMode="singleTask"/>

        <activity
            android:name=".ui.assessment_general.GeneralAssessmentActivity"
            android:exported="false"
            android:launchMode="singleTask"/>

        <activity
            android:name=".ui.assessment_overweight.OverweightAssessmentActivity"
            android:exported="false"
            android:launchMode="singleTask"/>
    </application>

</manifest>